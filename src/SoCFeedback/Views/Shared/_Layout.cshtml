@using Microsoft.AspNetCore.Authorization
@inject IAuthorizationService AuthorizationService
@inject SignInManager<ApplicationUser> SignInManager

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SoC Feedback</title>

    <environment names="Development">
        <link rel="stylesheet" href="~/lib/tether/dist/css/tether.css" />
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
        <link rel="stylesheet" href="~/lib/datatables/media/css/dataTables.bootstrap4.css" />
        <link rel="stylesheet" href="~/lib/font-awesome/css/font-awesome.css" />
        <link rel="stylesheet" href="~/lib/bootstrap-star-rating/css/star-rating.css" />
        <link rel="stylesheet" href="~/lib/bootstrap-star-rating/css/theme-krajee-fa.css" />
        <link rel="stylesheet" href="~/lib/chartist/dist/chartist.css" />
        <link rel="stylesheet" href="~/css/site.css" />
        <script src="~/lib/jquery/dist/jquery.js"></script>
        <script src="~/lib/chartist/dist/chartist.js"></script>
        <script src="~/lib/chartist-plugin-axistitle/dist/chartist-plugin-axistitle.js"></script>
    </environment>
    <environment names="Staging,Production">
        <link rel="stylesheet" href="~/lib/tether/dist/css/tether.min.css" />
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
        <link rel="stylesheet" href="~/lib/datatables/media/css/dataTables.bootstrap4.min.css" />
        <link rel="stylesheet" href="~/lib/font-awesome/css/font-awesome.min.css" />
        <link rel="stylesheet" href="~/lib/bootstrap-star-rating/css/star-rating.min.css" />
        <link rel="stylesheet" href="~/lib/bootstrap-star-rating/css/theme-krajee-fa.min.css" />
        <link rel="stylesheet" href="~/lib/chartist/dist/chartist.min.css" />
        <link rel="stylesheet" href="~/css/site.min.css"/>
        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/chartist/dist/chartist.min.js"></script>
        <script src="~/lib/chartist-plugin-axistitle/dist/chartist-plugin-axistitle.min.js"></script>
    </environment>
</head>
<body>
    <nav class="navbar bg-inverse navbar-dark navbar-toggleable-sm ">
        <div class="container-fluid">
            <button class="navbar-toggler hidden-md-up float-xs-right " type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation"></button>
            <a asp-area="" asp-controller="Home" asp-action="Index" class="navbar-brand">
                <img src="/favicon.ico" width="30" height="30" class="d-inline-block align-top" alt="SoC logo">
                SoC Feedback
            </a>
            <div class="collapse navbar-toggleable-sm " id="navbarSupportedContent">
                <ul class="nav navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Home" asp-action="About">About</a>
                    </li>
                    @if (SignInManager.IsSignedIn(User))
                    {
                        if (!await AuthorizationService.AuthorizeAsync(User, "TeachingStaff"))
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" id="navbarDropdownMenuLink" role="button" title="" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    Modules
                                </a>
                                <ul class="dropdown-menu bg-inverse" aria-labelledby="navbarDropdownMenuLink">
                                    <li>
                                        <a class="dropdown-item link " asp-area="" asp-controller="Categories" asp-action="Index" title="Categories">Categories</a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item link" asp-area="" asp-controller="Questions" asp-action="Index" title="Questions">Questions</a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item link" asp-area="" asp-controller="Levels" asp-action="Index" title="Levels">Levels</a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item link" asp-area="" asp-controller="Supervisors" asp-action="Index" title="Supervisors">Supervisors</a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item link" asp-area="" asp-controller="Modules" asp-action="Index" title="Modules">Modules</a>
                                    </li>
                                </ul>
                            </li>
                        }
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Years" asp-action="Index" title="Years">Years</a>
                        </li>
                        if (await AuthorizationService.AuthorizeAsync(User, "Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Account" asp-action="Index" title="Staff Accounts">Staff Accounts</a>
                            </li>
                        }
                    }
                    @await Html.PartialAsync("_LoginPartial")
                </ul>
            </div>
        </div>
    </nav>
    <div class="container">
        @RenderBody()
        <hr />
        <footer class="text-xs-center">
            <p>Please email <a href="mailto:a.taraskevicius@dundee.ac.uk"> Aistis Taraskevicius</a> if you have encountered problems or have feedback.
            </p>
        </footer>
    </div>

    <environment names="Development">
        <script src="~/lib/tether/dist/js/tether.js"></script>
        <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
        <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
        <script src="~/lib/datatables/media/js/jquery.dataTables.js"></script>
        <script src="~/lib/datatables/media/js/datatables.bootstrap4.js"></script>
        <script src="~/lib/textarea-autosize/dist/jquery.textarea_autosize.js"></script>
        <script src="~/lib/bootstrap-star-rating/js/star-rating.js"></script>
        <script src="~/lib/bootstrap-star-rating/themes/krajee-fa/theme.js"></script>
        <script src="~/js/site.js"></script>
    </environment>
    <environment names="Staging,Production">
        <script src="~/lib/tether/dist/js/tether.min.js"></script>
        <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
        <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
        <script src="~/lib/datatables/media/js/jquery.dataTables.min.js"></script>
        <script src="~/lib/datatables/media/js/dataTables.bootstrap4.min.js"></script>
        <script src="~/lib/textarea-autosize/dist/jquery.textarea_autosize.min.js"></script>
        <script src="~/lib/bootstrap-star-rating/js/star-rating.min.js"></script>
        <script src="~/lib/bootstrap-star-rating/themes/krajee-fa/theme.min.js"></script>
        <script src="~/js/site.min.js"></script>
    </environment>
    @RenderSection("scripts", false)
</body>
</html>