@using SoCFeedback.Enums
@model SoCFeedback.Models.Question

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<form asp-action="Create">
    <div class="form-horizontal">
        <h4>Question</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Question1" class="col-xs-2 control-label"></label>
            <div class="col-xs-10">
                <textarea asp-for="Question1" class="form-control"></textarea>
                <span asp-validation-for="Question1" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Type" class="col-xs-2 control-label"></label>
            <div class="col-xs-10">
                <select asp-for="Type" asp-items="Html.GetEnumSelectList<QuestionType>()" class="form-control-select"></select>
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Category" class="col-xs-2 control-label"></label>
            <div class="col-xs-10">
                <select asp-for="CategoryId" class="form-control-select" asp-items="ViewBag.CategoryId"></select>
            </div>
        </div>
        <div class="form-check">
            <div class="col-xs-2">
                <input asp-for="Optional" />
                <label asp-for="Optional"></label>
            </div>
            <div class="col-xs-10">
                <label>Optional questions can be manually added to modules, but will not be included by default.</label> 
            </div>
        </div>
        <div class="form-group col-sm-12">
            <input type="submit" value="Create" class="btn btn-primary" />
            <a asp-action="Index" class="float-xs-right">Back to List</a>
        </div>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}


}
