@model ChangeNameViewModel
@{
    ViewData["Title"] = "Change Name";
}

<h2>Change Name</h2>

<form asp-controller="Manage" asp-action="ChangeName" method="post">
    <hr />
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group row">
        <label asp-for="Forename" class="col-md-2 form-control-label"></label>
        <div class="col-md-10">
            <input asp-for="Forename" class="form-control" />
            <span asp-validation-for="Forename" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Surname" class="col-md-2 form-control-label"></label>
        <div class="col-md-10">
            <input asp-for="Surname" class="form-control" />
            <span asp-validation-for="Surname" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">

            <input type="submit" value="Save" class="btn btn-primary"/>
            <a asp-action="Index" class="float-xs-right">Back</a>
        </div>
   
</form>