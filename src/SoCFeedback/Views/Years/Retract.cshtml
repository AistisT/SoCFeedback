@model Year

@{
    ViewData["Title"] = "Retract Year Form";
}

<h2>Retract</h2>
<h3 class="text-danger">Once retracted this year form will invisible to students and once again open for modifications!</h3>
<h3>Retracting should be done a middle of the second semester to allow lecturers to modify the second semester questionnaires.</h3>
<hr />
<form asp-action="Retract" asp-route-id="@Model.Id">
    <div>
        <h4>Year Form</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Year1)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.AcademicYear)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Status)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Status)
            </dd>
        </dl>
        <div class="row">
            <div class="col-md-12">
                <hr />
                <h4>Modules</h4>
                <hr />
                @for (var j = 0; j < Model.Levels.Count; j++)
                {
                    <label class=" text-primary h4 form-text">
                        @Html.DisplayFor(m => m.Levels[j].Title)
                    </label>
                    <ul class="list-group">
                        @for (var i = 0; i < Model.Modules.Count; i++)
                        {
                            if (Model.Modules[i].LevelId == Model.Levels[j].Id)
                            {
                                <li class=" list-group-item col-md-12">

                                    @Html.DisplayFor(m => m.Modules[i].Code) @Html.DisplayFor(m => m.Modules[i].Title)
                                </li>
                            }
                        }
                    </ul>
                }
            </div>
        </div>
        <br/>
        <div class="form-group">
            <input type="submit" value="Retract" class="btn btn-primary" />
            <a asp-action="Index" class="float-xs-right">Back to List</a>
        </div>
    </div>
</form>