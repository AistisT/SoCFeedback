@model SoCFeedback.Models.Module

@{
    ViewData["Title"] = "Edit Module";
}

<h2>Edit</h2>

<form asp-action="Edit">
    <div>
        <h4>Module</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="Id" />
        <div class="form-group row">
            <label asp-for="Code" class="col-md-2 form-control-label"></label>
            <div class="col-md-10">
                <input asp-for="Code" class="form-control" />
                <span asp-validation-for="Code" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Title" class="col-md-2 form-control-label"></label>
            <div class="col-md-10">
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Level" class="form-control-label col-md-2"></label>
            <div class="col-md-10">
                <select asp-for="LevelId" class="form-control" asp-items="ViewBag.LevelId"></select>
                <span asp-validation-for="LevelId" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Supervisor" class="form-control-label col-md-2"></label>
            <div class="col-md-10">
                <select asp-for="SupervisorId" class="form-control" asp-items="ViewBag.SupervisorId"></select>
                <span asp-validation-for="SupervisorId" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Description" class="col-md-2 form-control-label"></label>
            <div class="col-md-10">
                <textarea  asp-for="Description" class="form-control autosize"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Url" class="col-md-2 form-control-label"></label>
            <div class="col-md-10">
                <input asp-for="Url" class="form-control" />
                <span asp-validation-for="Url" class="text-danger"></span>
            </div>
        </div>
        <input type="hidden" asp-for="Status" />
        <div class="form-group col-sm-12">
            <input type="submit" value="Save" class="btn btn-primary" />
            <a asp-action="Index" class="float-right">Back to List</a>
        </div>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}