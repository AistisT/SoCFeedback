@model SoCFeedback.Models.Year

@{
    ViewData["Title"] = "Details";
}

<h2>Details</h2>

<div>
    <h4>Year</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Year1)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Year1)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Status)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Status)
        </dd>
    </dl>
    <div class="col-md-12">
        <hr />
        <h4>Modules</h4>
        <hr />
        @for (int j = 0; j < Model.Levels.Count; j++)
        {
            <span class=" text-primary h4">
                @Html.DisplayFor(m => m.Levels[j].Title)
            </span>
            <ul class="list-group">
                @for (int i = 0; i < Model.Modules.Count; i++)
                {
                    if (Model.Modules[i].LevelId == Model.Levels[j].Id)
                    {
                        <li class=" list-group-item col-md-12">

                            @Html.DisplayFor(m => m.Modules[i].Code) @Html.DisplayFor(m => m.Modules[i].Title)
                        </li>
                    }
                }
            </ul>
        }
    </div>

</div>

<div class="col-md-12">
    <hr />
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
    <hr />
</div>
