@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager


@if (SignInManager.IsSignedIn(User))
{

    <form asp-area="" class="float-sm-right" asp-controller="Account" asp-action="LogOff" method="post" id="logoutForm">
        <a asp-area="" asp-controller="Manage" class="link btn-group-vertical" asp-action="Index" title="Manage">Hello @UserManager.GetUserName(User) </a>
        <button class="btn btn-link link" type="submit">Log off</button>
    </form>

}
else
{
    <li class="nav-item float-sm-right">
        <a class="nav-link " asp-area="" asp-controller="Account" asp-action="Login">Staff Log in</a>
    </li>
}
