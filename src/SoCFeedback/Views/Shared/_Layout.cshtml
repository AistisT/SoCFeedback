@using Microsoft.AspNetCore.Authorization;
@inject IAuthorizationService AuthorizationService

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SoC Feedback</title>

    <environment names="Development">
        <link rel="stylesheet" href="~/lib/tether/dist/css/tether.css" />
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
        <link rel="stylesheet" href="~/lib/datatables/media/css/dataTables.bootstrap4.css" />
        <link rel="stylesheet" href="~/lib/font-awesome/css/font-awesome.css" />
        <link rel="stylesheet" href="~/lib/bootstrap-star-rating/css/star-rating.css" />
        <link rel="stylesheet" href="~/lib/bootstrap-star-rating/css/theme-krajee-fa.css" />
        <link rel="stylesheet" href="~/lib/chartist/dist/chartist.css" />
        <link rel="stylesheet" href="~/css/site.css" />
        <script src="~/lib/chartist/dist/chartist.js"></script>
        <script src="~/lib/chartist-plugin-axistitle/dist/chartist-plugin-axistitle.js"></script>

    </environment>
    <environment names="Staging,Production">
        <link rel="stylesheet" href="~/lib/tether/dist/css/tether.min.css" />
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
        <link rel="stylesheet" href="~/lib/datatables/media/css/jquery.dataTables.min.css" />
        <link rel="stylesheet" href="~/lib/font-awesome/css/font-awesome.min.css" />
        <link rel="stylesheet" href="~/lib/bootstrap-star-rating/css/star-rating.min.css" />
        <link rel="stylesheet" href="~/lib/bootstrap-star-rating/css/theme-krajee-fa.min.css" />
        <link rel="stylesheet" href="~/lib/chartist/dist/chartist.min.css" />
        <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
        <script src="~/lib/chartist/dist/chartist.min.js"></script>
        <script src="~/lib/chartist-plugin-axistitle/dist/chartist-plugin-axistitle.min.js"></script>

    </environment>
</head>
<body>
    <div class="container">
        <nav class="navbar navbar-light bg-faded navbar-toggleable-md navbar-fixed-top">
                <a asp-area="" asp-controller="Home" asp-action="Index" class="navbar-brand">SoC Feedback</a>
                <button class="navbar-toggler hidden-md-up float-md-right" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-toggleable-sm " id="navbarSupportedContent">
                    <ul class="nav navbar-nav">
                        <li class="nav-item"><a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a></li>
                        <li class="nav-item"><a class="nav-link" asp-area="" asp-controller="Home" asp-action="About">About</a></li>
                        @if (await AuthorizationService.AuthorizeAsync(User, "Admin") || await AuthorizationService.AuthorizeAsync(User, "Lecturer"))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Categories" asp-action="Index" title="Categories">Categories</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Questions" asp-action="Index" title="Questions">Questions</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Levels" asp-action="Index" title="Levels">Levels</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Supervisors" asp-action="Index" title="Supervisors">Supervisors</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Modules" asp-action="Index" title="Modules">Modules</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Years" asp-action="Index" title="Years">Years</a>
                            </li>
                        }
                    </ul>
                    <ul class="float-md-right">
                        @await Html.PartialAsync("_LoginPartial")
                    </ul>
                </div>
        </nav>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; 2016 - SoC Feedback</p>
        </footer>
    </div>

    <environment names="Development">
        <script src="~/lib/jquery/dist/jquery.js"></script>
        <script src="~/lib/tether/dist/js/tether.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
        <script src="~/lib/datatables/media/js/jquery.dataTables.js"></script>
        <script src="~/lib/datatables/media/js/datatables.bootstrap4.js"></script>
        <script src="~/lib/textarea-autosize/dist/jquery.textarea_autosize.js"></script>
        <script src="~/lib/bootstrap-star-rating/js/star-rating.js"></script>
        <script src="~/lib/bootstrap-star-rating/themes/krajee-fa/theme.js"></script>

        <script src="~/js/site.js" asp-append-version="true"></script>
    </environment>
    <environment names="Staging,Production">
        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/tether/dist/js/tether.min.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
        <script src="~/lib/datatables/media/js/jquery.dataTables.min.js"></script>
        <script src="~/lib/datatables/media/js/dataTables.bootstrap4.min.js"></script>
        <script src="~/lib/textarea-autosize/dist/jquery.textarea_autosize.min.js"></script>
        <script src="~/lib/bootstrap-star-rating/js/star-rating.min.js"></script>
        <script src="~/lib/bootstrap-star-rating/themes/krajee-fa/theme.min.js"></script>

        <script src="~/js/site.js" asp-append-version="true"></script>
    </environment>

    @RenderSection("scripts", required: false)
</body>
</html>