@model Question
@using SoCFeedback.Enums

@{
    ViewData["Title"] = "Create Question";
}

<h2>Create</h2>

<form asp-action="Create">
    <div>
        <h4>Question</h4>
        <hr/>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <label asp-for="Question1" class="col-md-2 form-control-label"></label>
            <div class="col-md-10">
                <input asp-for="Question1" class="form-control">
                <span asp-validation-for="Question1" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Type" class="col-md-2 form-control-label"></label>
            <div class="col-md-10">
                <select asp-for="Type" asp-items="Html.GetEnumSelectList<QuestionType>()" class="form-control"></select>
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Category" class="col-md-2 form-control-label"></label>
            <div class="col-md-10">
                <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.CategoryId"></select>
                <span asp-validation-for="CategoryId" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="QuestionNumber" class="col-md-2 form-control-label"></label>
            <div class="col-md-10">
                <input asp-for="QuestionNumber" class="form-control"/>
                <span asp-validation-for="QuestionNumber" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-12">
            <div class="offset-md-2 ">
                <input asp-for="Optional"/>
                <label asp-for="Optional"></label>
                <label>Non optional questions will be added to new modules on creation. Optional questions can be manually added to modules. Module questions can be edited after year form is created.</label>
            </div>
            <div class="form-group col-sm-12">
                <hr/>
                <input type="submit" value="Create" class="btn btn-primary"/>
                <a asp-action="Index" class="float-sm-right">Back to List</a>
            </div>
        </div>
    </div>
</form>