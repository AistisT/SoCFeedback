@model ChangePasswordViewModel
@{
    ViewData["Title"] = "Change Password";
}

<h2>@ViewData["Title"].</h2>

<form asp-controller="Manage" asp-action="ChangePassword" method="post">
    <h4>Change Password Form</h4>
    <hr/>
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="OldPassword" class="col-md-2 form-control-label"></label>
        <div class="col-md-10">
            <input asp-for="OldPassword" class="form-control"/>
            <span asp-validation-for="OldPassword" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="NewPassword" class="col-md-2 form-control-label"></label>
        <div class="col-md-10">
            <input asp-for="NewPassword" class="form-control"/>
            <span asp-validation-for="NewPassword" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="ConfirmPassword" class="col-md-2 form-control-label"></label>
        <div class="col-md-10">
            <input asp-for="ConfirmPassword" class="form-control"/>
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <div class="form-group col-sm-12">
            <input type="submit" value="Change Password" class="btn btn-primary" />
            <a asp-action="Index" class="float-sm-right">Back</a>
        </div>
    </div>
</form>