@model Module
@{
    ViewData["Title"] = "Create Module";
}

<h2>Create a Module</h2>

<form asp-action="Create">
    <div>
        <hr/>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <label asp-for="Code" class="col-md-2 form-control-label"></label>
            <div class="col-md-10">
                <input asp-for="Code" class="form-control"/>
                <span asp-validation-for="Code" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Title" class="col-md-2 form-control-label"></label>
            <div class="col-md-10">
                <input asp-for="Title" class="form-control"/>
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Level" class="col-md-2 form-control-label"></label>
            <div class="col-md-10">
                <select asp-for="LevelId" class="form-control" asp-items="ViewBag.LevelId"></select>
                <span asp-validation-for="LevelId" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Supervisor" class="col-md-2 form-control-label"></label>
            <div class="col-md-10">
                <select asp-for="SupervisorId" class="form-control" asp-items="ViewBag.SupervisorId"></select>
                <span asp-validation-for="LevelId" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Description" class="col-md-2 form-control-label"></label>
            <div class="col-md-10">
                <textarea asp-for="Description" class="form-control autosize"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Url" class="col-md-2 form-control-label"></label>
            <div class="col-md-10">
                <input asp-for="Url" class="form-control"/>
                <span asp-validation-for="Url" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <input type="submit" value="Create" class="btn btn-primary"/>
            <a asp-action="Index" class="float-xs-right">Back to List</a>
        </div>
    </div>
</form>