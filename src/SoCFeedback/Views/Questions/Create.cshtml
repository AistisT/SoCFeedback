@model Question
@using Microsoft.AspNetCore.Authorization
@using SoCFeedback.Enums
@inject IAuthorizationService AuthorizationService
@{
    ViewData["Title"] = "Create Question";
}

<h2>Create a Question</h2>

<form asp-action="Create">
    <div>
        <hr/>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <label asp-for="Question1" class="col-md-2 form-control-label"></label>
            <div class="col-md-10">
                <input asp-for="Question1" class="form-control">
                <span asp-validation-for="Question1" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Type" class="col-md-2 form-control-label"></label>
            <div class="col-md-10">
                <select asp-for="Type" asp-items="Html.GetEnumSelectList<QuestionType>()" class="form-control"></select>
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Category" class="col-md-2 form-control-label"></label>
            <div class="col-md-10">
                <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.CategoryId"></select>
                <span asp-validation-for="CategoryId" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="QuestionNumber" class="col-md-2 form-control-label"></label>
            <div class="col-md-10">
                <input asp-for="QuestionNumber" class="form-control"/>
                <span asp-validation-for="QuestionNumber" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-12">
            <div class="offset-md-2 ">
                @if (await AuthorizationService.AuthorizeAsync(User, "LecturerLimited"))
                {
                    <input asp-for="Optional" onclick="return false;"/>
                }
                else
                {
                    <input asp-for="Optional" />
                }
                <label>The optional questions will not be added to the new modules on creation, but can be manually added to any module.</label>
            </div>
        </div>
    </div>
    <div class="form-group">
        <hr />
        <input type="submit" value="Create" class="btn btn-primary" />
        <a asp-action="Index" class="float-xs-right">Back to List</a>
    </div>
</form>